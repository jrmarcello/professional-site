    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
    
    :root {
      --primary: #6366f1;
      --accent: #22d3ee;
      --surface: #0f0f14;
      --surface-light: #1a1a24;
      --text: #e5e5e5;
      --text-muted: #a3a3a3;
      --text-dim: #737373;
      --border: rgba(255, 255, 255, 0.1);
    }
    
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background: var(--surface);
      color: var(--text);
      font-size: 10pt;
      line-height: 1.5;
      -webkit-print-color-adjust: exact !important;
      print-color-adjust: exact !important;
    }
    
    .page {
      max-width: 210mm;
      margin: 0 auto;
      padding: 12mm 14mm;
      background: var(--surface);
    }
    
    .header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      padding-bottom: 16px;
      border-bottom: 1px solid var(--border);
      margin-bottom: 16px;
    }
    
    .header-left h1 {
      font-size: 28pt;
      font-weight: 700;
      color: #fff;
      margin-bottom: 4px;
    }
    
    .header-left .title {
      font-size: 11pt;
      color: var(--primary);
      font-weight: 500;
      letter-spacing: 0.5px;
    }
    
    .header-right {
      text-align: right;
      font-size: 9pt;
      color: var(--text-muted);
    }
    
    .header-right a {
      color: var(--text-muted);
      text-decoration: none;
    }
    
    .header-right p {
      margin-bottom: 3px;
    }
    
    .summary {
      background: var(--surface-light);
      border: 1px solid var(--border);
      border-radius: 8px;
      padding: 14px 16px;
      margin-bottom: 16px;
    }
    
    .summary p {
      color: var(--text);
      font-size: 10pt;
      line-height: 1.6;
    }
    
    .highlights {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
      margin-bottom: 16px;
    }
    
    .highlight-item {
      background: var(--surface-light);
      border: 1px solid var(--border);
      border-radius: 6px;
      padding: 10px 12px;
      font-size: 9pt;
      color: var(--text);
    }
    
    .highlight-item::before {
      content: "‚Üí";
      color: var(--accent);
      margin-right: 8px;
      font-weight: 600;
    }
    
    .content {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 20px;
    }
    
    .section-title {
      font-size: 8pt;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 2px;
      color: var(--text-dim);
      margin-bottom: 12px;
      padding-bottom: 6px;
      border-bottom: 1px solid var(--border);
    }
    
    .experience-item {
      margin-bottom: 16px;
      page-break-inside: avoid;
    }
    
    .experience-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 6px;
    }
    
    .experience-role {
      font-size: 11pt;
      font-weight: 600;
      color: #fff;
    }
    
    .experience-company {
      font-size: 10pt;
      color: var(--primary);
    }
    
    .experience-meta {
      text-align: right;
      font-size: 8pt;
      color: var(--text-dim);
    }
    
    .experience-summary {
      font-size: 9pt;
      color: var(--text-muted);
      margin-bottom: 8px;
    }
    
    .experience-bullets {
      list-style: none;
      margin-bottom: 8px;
    }
    
    .experience-bullets li {
      font-size: 9pt;
      color: var(--text);
      margin-bottom: 4px;
      padding-left: 14px;
      position: relative;
    }
    
    .experience-bullets li::before {
      content: "";
      position: absolute;
      left: 0;
      top: 7px;
      width: 5px;
      height: 5px;
      background: var(--accent);
      border-radius: 50%;
    }
    
    .experience-stack {
      font-size: 8pt;
      color: var(--text-dim);
      font-style: italic;
    }
    
    .sidebar-section {
      margin-bottom: 18px;
    }
    
    .sidebar-item {
      margin-bottom: 10px;
    }
    
    .sidebar-item-title {
      font-size: 10pt;
      font-weight: 500;
      color: #fff;
    }
    
    .sidebar-item-subtitle {
      font-size: 9pt;
      color: var(--text-muted);
    }
    
    .sidebar-item-meta {
      font-size: 8pt;
      color: var(--text-dim);
    }
    
    .cert-item {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 10px;
    }
    
    .cert-badge {
      width: 36px;
      height: 36px;
      flex-shrink: 0;
    }
    
    .cert-name {
      font-size: 9pt;
      color: var(--text);
    }
    
    .lang-item {
      font-size: 9pt;
      color: var(--text);
      margin-bottom: 4px;
      padding-left: 14px;
      position: relative;
    }
    
    .lang-item::before {
      content: "";
      position: absolute;
      left: 0;
      top: 6px;
      width: 5px;
      height: 5px;
      background: var(--accent);
      border-radius: 50%;
    }
    
    .prev-exp-item {
      margin-bottom: 8px;
      padding-bottom: 8px;
      border-bottom: 1px solid var(--border);
    }
    
    .prev-exp-item:last-child {
      border-bottom: none;
    }
    
    .prev-exp-header {
      display: flex;
      justify-content: space-between;
      font-size: 9pt;
    }
    
    .prev-exp-role {
      color: #fff;
      font-weight: 500;
    }
    
    .prev-exp-period {
      color: var(--text-dim);
      font-size: 8pt;
    }
    
    .prev-exp-company {
      font-size: 8pt;
      color: var(--primary);
    }
    
    .prev-exp-summary {
      font-size: 8pt;
      color: var(--text-muted);
      margin-top: 2px;
    }
    
    @media print {
      :root {
        --primary: #4f46e5;
        --accent: #0891b2;
        --surface: #ffffff;
        --surface-light: #f8fafc;
        --text: #1e293b;
        --text-muted: #475569;
        --text-dim: #64748b;
        --border: #e2e8f0;
      }
      
      body {
        background: white !important;
        color: #1e293b !important;
        -webkit-print-color-adjust: exact !important;
        print-color-adjust: exact !important;
      }
      
      .page {
        padding: 8mm 10mm;
        background: white !important;
      }
      
      .header-left h1 {
        color: #1e293b !important;
      }
      
      .experience-role,
