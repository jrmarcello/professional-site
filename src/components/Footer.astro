---
import { useTranslations, type Lang } from '../i18n';

interface Props {
  lang?: Lang;
}

const { lang = 'pt' } = Astro.props;
const t = useTranslations(lang);

const base = import.meta.env.BASE_URL.replace(/\/$/, '');

const links = [
  { label: 'GitHub', href: 'https://github.com/jrmarcello' },
  { label: 'LinkedIn', href: 'https://www.linkedin.com/in/marcelo-jr-9698874a' },
  { label: t('btn.resume'), href: `/${lang}/resume` },
  { label: 'Email', href: 'mailto:marcello.dudk@gmail.com' }
];
---

<footer class="relative mt-16 rounded-bento border border-white/5 bg-surface-900/70 p-6 text-sm text-neutral-300">
  <div class="flex flex-col gap-6 md:flex-row md:items-center md:justify-between">
    <div>
      <p class="text-xs uppercase tracking-[0.4em] text-neutral-500">{t('footer.cta')}</p>
      <p class="text-lg text-neutral-100">{t('footer.ctaDesc')}</p>
      <p class="text-neutral-400">marcello.dudk@gmail.com · +55 83 98831-7867</p>
    </div>
    <nav class="flex flex-wrap gap-3">
      {links.map(({ label, href }) => (
        <a class="rounded-full border border-white/10 px-4 py-2 text-neutral-200 hover:border-accent-500 hover:text-accent-400" href={href} target={href.startsWith('http') ? '_blank' : undefined} rel={href.startsWith('http') ? 'noreferrer' : undefined}>
          {label}
        </a>
      ))}
    </nav>
  </div>
  <div class="mt-4 flex flex-wrap items-center justify-between gap-2 border-t border-white/5 pt-4 text-xs text-neutral-500">
    <span>© {new Date().getFullYear()} Marcelo Jr</span>
    <span>{t('footer.builtWith')}</span>
  </div>
</footer>
