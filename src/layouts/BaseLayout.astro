---
import '../styles/global.css';
import LanguagePicker from '../components/LanguagePicker.astro';
import { type Lang } from '../i18n';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  noindex?: boolean;
  lang?: Lang;
  showLanguagePicker?: boolean;
}

const {
  title: pageTitle = 'Marcelo Jr · Arquiteto de Soluções & Backend Engineer',
  description: pageDescription = 'Arquiteto de Soluções AWS com 13+ anos de experiência em sistemas distribuídos, microserviços, Kubernetes e modernização de legados para bancos, fintechs e SaaS.',
  image: pageImage = '/og-image.jpg',
  type: pageType = 'website',
  noindex = false,
  lang = 'pt',
  showLanguagePicker = true
} = Astro.props;

const siteUrl = 'https://marcelojr.com.br';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const imageUrl = new URL(pageImage, siteUrl).href;
const currentPath = Astro.url.pathname;

// Alternate language URLs for hreflang
const pathWithoutLang = currentPath.replace(/^\/(pt|en)/, '');
const ptUrl = new URL(`/pt${pathWithoutLang || '/'}`, siteUrl).href;
const enUrl = new URL(`/en${pathWithoutLang || '/'}`, siteUrl).href;

const htmlLang = lang === 'pt' ? 'pt-BR' : 'en';
const ogLocale = lang === 'pt' ? 'pt_BR' : 'en_US';
---
<!DOCTYPE html>
<html lang={htmlLang} class="bg-surface-950 text-neutral-50">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    
    <!-- SEO Basic -->
    <title>{pageTitle}</title>
    <meta name="description" content={pageDescription} />
    <link rel="canonical" href={canonicalUrl} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Hreflang for i18n SEO -->
    <link rel="alternate" hreflang="pt-BR" href={ptUrl} />
    <link rel="alternate" hreflang="en" href={enUrl} />
    <link rel="alternate" hreflang="x-default" href={ptUrl} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- Open Graph / Facebook / LinkedIn -->
    <meta property="og:type" content={pageType} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content={ogLocale} />
    <meta property="og:site_name" content="Marcelo Jr" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={imageUrl} />
    
    <!-- Additional SEO -->
    <meta name="author" content="Marcelo Jr" />
    <meta name="theme-color" content="#0f0f14" />
    
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ProfilePage",
      "mainEntity": {
        "@type": "Person",
        "name": "Marcelo Jr",
        "jobTitle": lang === 'pt' ? "Arquiteto de Software e Soluções" : "Software & Solutions Architect",
        "description": pageDescription,
        "url": siteUrl,
        "image": imageUrl,
        "email": "marcello.dudk@gmail.com",
        "telephone": "+55 83 98831-7867",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "João Pessoa",
          "addressRegion": "Paraíba",
          "addressCountry": "BR"
        },
        "sameAs": [
          "https://www.linkedin.com/in/marcelo-jr-9698874a",
          "https://github.com/jrmarcello"
        ],
        "knowsAbout": [
          "AWS", "Cloud Architecture", "Microservices", "Kubernetes", 
          "Node.js", "TypeScript", "Java", "Spring Boot", "Docker",
          "System Design", "DDD", "Event-Driven Architecture"
        ],
        "hasCredential": [
          {
            "@type": "EducationalOccupationalCredential",
            "name": "AWS Certified Solutions Architect – Associate",
            "credentialCategory": "certification",
            "recognizedBy": {
              "@type": "Organization",
              "name": "Amazon Web Services"
            }
          }
        ],
        "alumniOf": {
          "@type": "EducationalOrganization",
          "name": "Instituto Federal da Paraíba"
        },
        "worksFor": {
          "@type": "Organization",
          "name": lang === 'pt' ? "Consultor Independente" : "Independent Consultant"
        }
      }
    })} />
  </head>
  <body class="relative min-h-screen bg-surface-950 text-neutral-50 antialiased">
    <div class="grid-overlay pointer-events-none absolute inset-0 opacity-50"></div>
    
    {showLanguagePicker && (
      <div class="fixed top-4 right-4 z-50">
        <LanguagePicker lang={lang} currentPath={currentPath} />
      </div>
    )}
    
    <main class="relative z-10 mx-auto flex max-w-6xl flex-col gap-12 px-6 py-12">
      <slot />
    </main>
  </body>
</html>
